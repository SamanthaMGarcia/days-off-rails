<%= form_for @request do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.fields_for :day, @request.build_day do |day_field| %>
    <%= day_field.date_select(:dayoff, :order => [:month, :day, :year]) %>
<% end %>
  <%= f.label :reason %>
  <%= f.text_field :reason, required: true  %>
  <%= f.submit %>
<% end %>
